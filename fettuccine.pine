sMA(src, length) =>
// Get standard OHLC candle values
	tClose = close

	// Inputs

	// SuperSmoother filter
	// © 2013  John F. Ehlers
	pi = 2 * asin(1)
	a = exp(-1.414 * pi / length)
	b = 2 * a * cos(1.414 * pi / length)
	c2 = b
	c3 = -a * a
	c1 = 1 - c2 - c3

	ssf = 0.0
	ssf := (c1 * ((src + nz(src[1])) / 2)) + (c2 * nz(ssf[1])) + (c3 * nz(ssf[2]))

