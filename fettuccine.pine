//bb
bb() => 
	length = 20
	src = close
	mult = 2.0
	basis = sma(src, length)
	dev = mult * stdev(src, length)
	upper = basis + dev
	lower = basis - dev
	offset = input(0, "Offset", type = input.integer, minval = -500, maxval = 500)
	[upper, lower, basis, offset]

